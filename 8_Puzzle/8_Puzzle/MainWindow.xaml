<Window x:Class="_8_Puzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_8_Puzzle"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MouseMove="Window_MouseMove"
        Loaded="Window_Loaded">
    <Canvas x:Name="canvas">
        <Image x:Name="previewImage" MouseLeftButtonUp="previewImage_MouseLeftButtonUp"/>
        <Button x:Name="btnPickPicture" Click="BtnPickPicture_Click" Content="Select Picture" RenderTransformOrigin="0.295,-0.038"/>
        <Button x:Name="btnSaveGame" Click="btnSaveGame_Click" Content="Save Game" Canvas.Left="79" />
        <Button x:Name="btnLoadGame" Click="btnLoadGame_Click" Content="Load Game" Canvas.Left="146" />
        <Label x:Name="lbTimer" FontSize="20px" RenderTransformOrigin="22.924,1.104" Canvas.Left="309" Canvas.Top="5"/>
    </Canvas>
</Window>
